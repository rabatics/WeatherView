<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/icon"
        android:layout_alignLeft="@+id/fl"
        android:layout_alignStart="@+id/fl" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/citytxt"
        android:layout_below="@+id/fl"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignStart="@+id/icon"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/icon"
        android:layout_alignEnd="@+id/icon" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/state"
        android:gravity="center_horizontal"
        android:layout_below="@+id/citytxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/fl"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Feels Like:"
        android:id="@+id/textView4"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/fl"
        android:layout_toStartOf="@+id/fl"
        android:textColor="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temp:"
        android:id="@+id/textView5"
        android:layout_below="@+id/icon"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textColor="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wind:"
        android:id="@+id/textView6"
        android:layout_below="@+id/fl"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textSize="30sp"
        android:textColor="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/wind"
        android:gravity="center"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/fl"
        android:layout_alignStart="@+id/fl"
        android:layout_alignRight="@+id/fl"
        android:layout_alignEnd="@+id/fl"
        android:textSize="30sp" />
</RelativeLayout>