<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/weather" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:text="WeatherView"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/citytxt"

        android:layout_centerVertical="true"
        android:text="City:"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/statetxt"
        android:layout_below="@+id/citytxt"
        android:layout_alignLeft="@+id/citytxt"
        android:layout_alignStart="@+id/citytxt"
        android:layout_alignRight="@+id/citytxt"
        android:layout_alignEnd="@+id/citytxt"
        android:text="State:"
        android:textSize="30dp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/city"
        android:layout_alignTop="@+id/citytxt"
        android:textSize="30dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_toRightOf="@+id/citytxt"
        android:layout_toEndOf="@+id/citytxt" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/state"
        android:layout_alignTop="@+id/statetxt"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/statetxt"
        android:layout_alignRight="@+id/city"
        android:layout_alignEnd="@+id/city" />

    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:textOn="C"
        android:textOff="F"
        android:textSize="30sp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/statetxt"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignStart="@+id/icon" />
</RelativeLayout>